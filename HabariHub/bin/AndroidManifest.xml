            android:name="com.tanzoft.habarihub.Developers"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tanzoft.habarihub.CreditsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.rss_activities.SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.rss_activities.ListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
