        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tanzoft.habarihub.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tanzoft.habarihub.AboutActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.RadioActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.VideosActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme.TranslucentActionBar" />
        <activity
            android:name="com.tanzoft.habarihub.MagazetiActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light.TranslucentActionBar" />
