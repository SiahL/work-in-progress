            android:name="com.tanzoft.habarihub.ui.CardsUI"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.youtube.YoutubeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:hardwareAccelerated="true"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.tanzoft.habarihub.youtube.YoutubeListView"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="nosensor" />
